<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brancoAzulado"
    android:gravity="center_horizontal"
    tools:context="com.opendoor.morfador.MainActivity$PlaceholderFragment" >
    
   
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/azul"
        android:gravity="center"
         >
        
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textColor="#888888"
        android:textStyle="bold"
         />

     
    </LinearLayout>
    
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LinearLayout1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginTop="20dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btMapa"
                style="@style/style_buton"
                android:text="@string/player"
                android:onClick="chamaPlayer"
                android:background="@drawable/seletor_botao"
                />

            <Button
                android:id="@+id/btp2"
                style="@style/style_buton"
                android:layout_marginLeft="30dp"
                android:text="@string/nerd"
                android:background="@drawable/seletor_botao_escuro" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp" >

            <Button
                android:id="@+id/btp3"
                style="@style/style_buton"
                android:text="@string/sexy"
                android:background="@drawable/seletor_botao_escuro" />

            <Button
                android:id="@+id/btp4"
                style="@style/style_buton"
                android:layout_marginLeft="30dp"
                android:text="@string/gamer"
                android:background="@drawable/seletor_botao"
                 />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp"
             >

            <Button
                android:id="@+id/btp5"
                style="@style/style_buton"
                android:text="@string/dormindo"
                android:background="@drawable/seletor_botao" />

            <Button
                android:id="@+id/btp6"
                style="@style/style_buton"
                android:layout_marginLeft="30dp"
                android:text="@string/respirando"
                android:background="@drawable/seletor_botao_escuro" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
             >

            <Button
                android:id="@+id/btp7"
                style="@style/style_buton"
                android:text="@string/gay"
                android:background="@drawable/seletor_botao_escuro" />

            <Button
                android:id="@+id/btp8"
                style="@style/style_buton"
                android:layout_marginLeft="30dp"
                android:text="@string/aquilo"
                android:background="@drawable/seletor_botao" />
        </LinearLayout>
        
       
        
        
    </LinearLayout>
    
    </ScrollView>

  

</RelativeLayout>